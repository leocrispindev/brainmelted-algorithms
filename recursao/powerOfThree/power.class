class Solution {
    public boolean isPowerOfThree(int n) {
        if(n <= 0) 
            return false;

        if(n == 1)
            return true;
        
			// verifica se n é divisivel por 3
			// se for, divide por 3 e chama a recursão
        if(n%3 == 0)
            return isPowerOfThree(n/3);
        
        return false;
    }
}